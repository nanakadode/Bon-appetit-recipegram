<section class="section">
  <h3>User Edit</h3>
  <div class="container">
    <div class="columns is-centered">
      <div class="columns is-6">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :username, "Username", class: "label" %>
            <%= f.text_field :username, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :email, "Email", class: "label" %>
            <%= f.text_field :email, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :profile, "Profile", class: "label" %>
            <%= f.text_area :profile, rows: 5, class: "textarea" %>
          </div>
          <div class="field">
            <%= f.label :profile_img, "Profile icon", class: "label" %>
            <%= f.file_field :profile_img %>
          </div>
          <%= f.submit "Submit", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
