<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<div class="users-cards-container">
  <% @users.each do |user| %>
    <div class="user-card">
      <div class="user-img-name-profile">
        <%= attachment_image_tag user, :profile_img, fallback: "no-image.jpeg", class: "user-img" %>
        <div class="user-name-profile">
          <p class="user-name bold"><strong><%= user.username %></strong></p>
          <p class="user-profile"><small><%= user.profile %></small></p>
        </div>
      </div>
      <div class="user-edit-delete">
        <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
        <a href="#">Delete <i class="far fa-trash-alt"></i></a>
      </div>
    </div>
  <% end %>
</div>
