<div class="container d-flex  justify-content-center mt-5">
  <div class="recipe-card">
    <div class="recipe-image">
      <%= attachment_image_tag @recipe, :image, class: "recipe-image-tag" %>
      <div class="like bold">
        <% if !@recipe.liked?(current_user) %>
          <%= link_to recipe_likes_path(@recipe), method: :post do %>
            <i class="far fa-heart like-btn"></i>
          <% end %>
        <% else %>
          <%= link_to recipe_likes_path(@recipe), method: :delete do %>
            <i class="far fa-heart like-btn"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="recipe-text px-4 pt-3 pb-3">
      <h3 class="mt-2"><%= @recipe.title %></h3>
      <div class="px-2">
        <p class="mb-0">Recipe</p>
        <hr class="mt-0">
        <p class="mt-1"><%= simple_format @recipe.body %></p>
      </div>
      <% if @recipe.user_id == current_user.id %>
        <%= link_to "Edit", edit_recipe_path(@recipe), class: "button is-success" %>
      <% end %>
    </div>
  </div>
  <div class="ml-4">
    <p class="mb-0 text-center">Uploaded by <strong><%= @recipe.user.username %></strong></p>
    <%= link_to user_path(@recipe.user_id), class: "button is-success pt-1 pb-1" do %>
      <p class="mb-0"><i class="fas fa-user"></i>  <%= @recipe.user.username %>'s page</p>
    <% end %>
  </div>
</div>
