<div class="mt-5 mb-5 m-6">
  <h3 class="mb-3 fw-bold">Recipe Edit</h3>
  <%= form_for(@recipe) do |f| %>
    <div class="recipe-edit-form">
      <%= f.label :title, "Title" %><br />
      <%= f.text_field :title ,class: "mb-3" %><br />
      <%= f.label :body, "How to cook" %><br />
      <%= f.text_area :body, rows: 5 ,class: "mb-3" %><br />
      <%= f.label :image, "Image" %><br />
      <%= f.file_field :image ,class: "mb-3" %><br />
      <%= f.submit "Submit", class: "user-edit-button" %>
    </div>
  <% end %>
</div>
