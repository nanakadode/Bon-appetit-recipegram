<div class="notification is-danger">
  <% if @recipe.errors.any? %>
    <h3>* <%= pluralize(@recipe.errors.count, 'error')  %></h3>
    <ul>
      <% @recipe.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<section class="section">
  <h3>Recipe Edit</h3>
  <div class="container">
    <div class="columns is-centered">
      <div class="columns is-6">
        <%= form_for(@recipe) do |f| %>
          <div class="field">
            <%= f.label :title, "Title", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :body, "How to cook", class: "label" %>
            <%= f.text_area :body, rows: 10 ,class: "textarea" %>
          </div>
          <div class="field">
            <%= f.label :image, "Image", class: "label" %>
            <%= f.file_field :image ,class: "input" %>
          </div>
          <%= f.submit "Submit", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
