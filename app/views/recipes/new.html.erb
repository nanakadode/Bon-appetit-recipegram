<div class="container">
  <h3 class="mt-3">New Recipe</h3>
  <%= form_for @recipe do |f| %>
    <div class="recipe-new m-3">
      <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 5 %>
      </div>
      <%#= f.input :title,
              autofocus: true,
              input_html: { autocomplete: "title" } %>
      <%#= f.input :body,
              autofocus: true,
              input_html: { autocomplete: "body", row: 5 } %>
      <div>
        <%= f.label :image, "Image" %>
        <%= f.file_field :image %>
      </div>
      <div>
        <%= f.submit "Submit", class: "recipe-button" %>
      </div>
    </div>
  <% end %>
</div>
