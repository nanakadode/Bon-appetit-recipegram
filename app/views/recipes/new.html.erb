<div class="container">
  <h3 class="mt-3">New Recipe</h3>
  <%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_field :body, input_html: { row: 5 } %>
    <%#= f.input :title,
              autofocus: true,
              input_html: { autocomplete: "title" } %>
    <%#= f.input :body,
              autofocus: true,
              input_html: { autocomplete: "body", row: 5 } %>
    <%= f.label :image, "Image" %>
    <%= f.file_field :image %>
    <%= f.submit "Submit", class: "recipe-button" %>
  <% end %>
</div>
