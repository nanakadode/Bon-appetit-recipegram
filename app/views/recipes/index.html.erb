<h3>Recipe lineup</h3>
<div class="cards">
  <%= @recipes.each do |recipe| %>
    <div class="recipe-index-card">
      <%= link_to recipe_path(recipe) do %>
        <div class='recipe-index-recipe'>
          <%= attachment_image_tag recipe, :image, class: "recipe-index-img" %>
          <div class="recipe-name d-flex">
            <h5><%= recipe.title %></h5>
            <p class="font-small"><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
          </div>
        <% end %>
        <div class="recipe-user d-flex">
          <%= attachment_image_tag recipe.user, :profile_img, fallback: "no-image.jpeg", class: "recipe-user-img"  %>
          <p class="ml-3"><%= recipe.user.username %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
