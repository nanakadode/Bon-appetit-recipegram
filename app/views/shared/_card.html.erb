<div>
  <%= link_to recipe_path(recipe), class: 'recipe-index-card' do %>
    <div class='recipe-index-recipe'>
      <%= attachment_image_tag recipe, :image, class: "recipe-index-img" %>
      <div class="recipe-name">
        <h5><%= recipe.title %></h5>
      </div>
      <div class="recipe-date">
        <p class="time mb-0"><%= recipe.updated_at.strftime("%Y/%m/%d %H:%M") %></p>
      </div>
    <% end %>
    <div class="d-flex justify-content-between align-items-center">
      <%= link_to user_path(recipe.user), class: 'recipe-user' do %>
        <div class="d-flex justify-content-start p-2">
          <%= attachment_image_tag recipe.user, :profile_img, fallback: "no-image.jpeg", class: "recipe-user-img"  %>
          <p class="ml-3 mb-0"><%= recipe.user.username %></p>
        </div>
      <% end %>
      <div>
        <p class="pr-3"><i class="fas fa-heart" style="color: #f14668;"></i> <%= recipe.likes.count %></p>
      </div>
    </div>
  </div>
</div>
